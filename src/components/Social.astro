---
const { platform, username } = Astro.props;
---

<a href={`https://www.${platform}.com/${username}`}>{platform}</a>
<style>
  /*a {
    padding: 0.5rem 1rem;
    color: rgb(36, 203, 218);
    background-color: #4c1d95;
    text-decoration: underline;
  }*/
  a {
    margin: 1em;
    border: dotted 2px #a1a1a1;
    border-radius: 1em;
    padding: 0.5em 2em;

    background-color: #f8fcfd;
    display: block;
    text-align: center;
    padding: 10px 0;
    text-decoration: none;
    font-size: 1.2rem;
    font-weight: bold;
    text-transform: uppercase;
    text-shadow: 0 0 3vw #04b2f705;
    animation: flux 2s linear infinite;
  }
  a:hover,
  a:focus {
    /*background-color: #ff9776;*/
    text-shadow: 0 0 3vw #f4bd0a;
    animation: neon 2s ease-in-out infinite;
  }
  @keyframes flux {
    0%,
    100% {
      text-shadow:
        0 0 0.1vw #04fc0c,
        0 0 3vw #0ae9d6,
        0 0 10vw #1041ff,
        0 0 10vw #1041ff,
        0 0 0.4vw #8bfdfe,
        0.5vw 0.5vw 0.1vw #147280;
      color: #5afb03;
    }
  }
  @keyframes neon {
    0%,
    100% {
      text-shadow:
        0 0 1vw #fa1c16,
        0 0 3vw #fa1c16,
        0 0 10vw #fa1c16,
        0 0 10vw #fa1c16,
        0 0 0.4vw #fed128,
        0.5vw 0.5vw 0.1vw #806914;
      color: #fffc00;
    }

    50% {
      text-shadow:
        0 0 0.5vw #800e0b,
        0 0 1.5vw #800e0b,
        0 0 5vw #800e0b,
        0 0 5vw #800e0b,
        0 0 0.2vw #800e0b,
        0.5vw 0.5vw 0.1vw #40340a;
      color: #806914;
    }
  }
</style>
